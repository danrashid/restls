{
  "name": "restls",
  "version": "1.0.11",
  "description": "A REST-like interface for localStorage",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/danrashid/restls",
  "author": "Dan Rashid",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/uuid": "^3.4.3",
    "coveralls": "^3.0.2",
    "husky": "^1.0.0-rc.13",
    "jest": "^23.4.1",
    "lint-staged": "^7.2.0",
    "prettier": "1.13.7",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "typescript": "2.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "setupFiles": [
      "./test/setup.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  },
  "scripts": {
    "precommit": "lint-staged",
    "clean": "rimraf build",
    "build": "npm run clean && tsc",
    "test": "jest",
    "watch": "tsc -w"
  },
  "dependencies": {
    "uuid": "^3.3.2"
  }
}
